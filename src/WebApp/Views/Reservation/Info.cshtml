@model ReservationViewModel
@{
    ViewData["Title"] = "Thanks!";
}

<div class="container">
    <h2>Your reservationcode: @Model.ReservationCode</h2>
    <h3>Seats booked: @Model.Seats</h3>
    <br><br>
    <h4>Movie: @Model.Viewing.Movie.Title</h4>
    <h4>Date: @Model.Viewing.ViewingStart.ToString("m") @Model.Viewing.ViewingStart.ToString("t")</h4>

    <div class="row">
        <div class="col2">
            <button class="btn btn-primary" onclick="window.location.href='/'">Go back</button>
        </div>
        <div class="col8">

        </div>
        <div class="col2">
            <button class="btn btn-danger" data-bs-toggle="modal" data-bs-target="#warningModal">Delete
                Reservation</button>
        </div>
    </div>
</div>

<div class="modal fade" id="warningModal" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1"
    aria-labelledby="warningModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="warningModalLabel">Warning</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                Are you sure you want to delete this reservation?
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Go Back</button>
                <form asp-controller="Reservation" asp-action="DeleteReservation">
                    <input type="hidden" name="ReservationCode" value="@Model.ReservationCode" />
                    <input type="submit" class="btn btn-danger" value="Delete Reservation" />
                </form>
            </div>
        </div>
    </div>
</div>